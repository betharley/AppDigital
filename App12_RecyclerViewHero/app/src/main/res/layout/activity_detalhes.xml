<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".DetalhesActivity">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="10dp"
        app:cardCornerRadius="16dp"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/detalhe_foto"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@drawable/arqueiro"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/detalhe_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome personagem"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:id="@+id/detalhe_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do Personagem"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="fill_horizontal"
                android:layout_marginBottom="16dp"

                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/detalhe_forca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Força: 90"
                    android:textColor="#FF5722"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="fill_horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    />

                <Button
                    android:id="@+id/detlhes_combater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Combater"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:background="@drawable/shape_botao"

                    />

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>