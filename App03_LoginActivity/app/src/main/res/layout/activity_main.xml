<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/vinte"
    android:background="@color/colorFundo"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/foobar"
        android:textSize="@dimen/trintaCinco"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:layout_marginTop="@dimen/cinquenta"
        android:textSize="@dimen/vinteSP"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:paddingBottom="@dimen/dez"
        android:paddingTop="@dimen/dez"
        android:backgroundTint="#FFF"
        android:fontFamily="sans-serif"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:layout_marginTop="@dimen/vinte"
        android:textSize="@dimen/vinteSP"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:backgroundTint="#FFF"
        android:fontFamily="sans-serif"
        android:inputType="textPassword"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/trinta"
        android:text="@string/login"
        android:textAllCaps="true"
        android:textSize="@dimen/vinte"
        android:padding="16dp"
        android:background="@color/colorBackgroundButtom"
        android:textColor="@color/colorWhite"
        android:fontFamily="sans-serif"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signin"
        android:layout_marginTop="@dimen/vinte"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/vinte"
        android:fontFamily="sans-serif"
        android:backgroundTint="@color/colorWhite"
        />

</LinearLayout>